<% @harvests.each do |harvest| %>
  <p>ID récolte : <%= harvest.id %></p>
  <p>Date récolte : <%= harvest.date.strftime("%d/%m/%Y") %></p>
  <p>Partenaire : <%= harvest.partner.name %></p>
  <p>Heure : <%= harvest.hour.strftime("%H:%M") %></p>
  <p><%= harvest.harvesters.count %> récolteurs positionnés sur <%= harvest.harvesters_number %></p>
  <p><%= if harvest.harvesters.count < harvest.harvesters_number
    "Pas assez de récolteurs"
    else
    "Quota de récolteurs atteint"
    end %></p>

  <p><%= Date.today.advance(days: 7).strftime("%d/%m/%Y") %></p>

  <p><%= if harvest.date <= Date.today.advance(days: 7)
    "La date est proche"
    else
    "La date est loin"
    end %></p>



  <br><br><br><br><br>
<% end %>

<div class="index">
	<!-- TITLE -->
	<h1 class="inset">Les récoltes urgentes</h1>
	<p>Cette semaine, il manque du monde sur les crénaux suivants : </p>

	<!-- CARDS -->
	<div class="cards">

		<!-- CARD URGENCE -->
		<div class="card-template-urgence">
			<% @harvests.each do |harvest| %>
  			<p>Date récolte : <%= harvest.date.strftime("%d/%m/%Y") %></p>
  
  

			<div class="date-info">
				<p><i class="fas fa-user"></i> <i class="far fa-user"></i></p>
				<p class="hour"><%= harvest.hour.strftime("%H:%M") %></p>
			</div>
			<div class="card-urgence">
				<div class="top">
					<div class="shop-name">
						<%= image_tag "carrefour.png", alt: "Carrefour", width: 30 %>
						<p class="shop-title"><%= harvest.partner.name %></p>
					</div>
					<div class="distance">
						<p class="distance-label"><span><i class="fas fa-map-marker-alt"></i></span>700 m</p>
					</div>	
				</div>
				<div class="bottom">
					<p class="shop-address"><%= harvest.partner.address %></p>
				<!--	<p class="shop-address"><%= harvest.partner.zipcode %><%= harvest.partner.city %> </p> -->
					<p class="label-yellow">je m'inscris</p>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>