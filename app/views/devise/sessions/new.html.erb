<div class="container">
  <div class="logo-badge"></div>
  <h1 class="card-title inset text-center title-connexion" >Bienvenue</h1>
  <h1 class="card-title inset text-center title-connexion">Connectez-vous</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pt-5 pb-2"}) do |f| %>
    <div class="form-inputs" id="label-login">
      <%= f.input :email,
                  label: "Email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>

      <%= f.input :password,
                  label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>

                  <%= render "devise/shared/links" %>

    </div>
    <div>
      <%= f.button :submit, "Valider", :class => "btn-oval-full-green" %>
    </div>
<% end %>

</div>


















