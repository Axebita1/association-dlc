<%= simple_form_for(distribution) do |f| %>
  <div class="distribution-form-container">
    <div class="form-user">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-right inset">J'organise ma distribution</h1>
      </div>

      <div class="row mt-2">
        <div class="mt-3 col-12">
          <label class="labels">1. De quelle récolte souhaitez-vous planifier la distribution</label>
          <%= f.collection_select :harvest, harvests, :id, :harvest_label %>
        </div>
        <div class="mt-3 col-12">
          <%= f.input :baskets_number, label: "Le nombre de paniers", type: "number", class: "form-control" %>
        </div>
        <div class="mt-3 col-12">
          <%= f.input :description, label: "Description", class: "form-control" %>
        </div>

        <div class="mt-3 col-12">
          <p>Équipements nécessaires</p>
        </div>
        <div class="bags d-flex justify-content-around col-12">
          <div class="form-check mt-3">
            <%= f.check_box :need_bag, class: "form-check-input" %>
            <%= f.label :need_bag, "Sacs et cabas", class: "form-check-label text-center"  %>
          </div>
          <div class="form-check mt-3">
            <%= f.check_box :need_cooler, class: "form-check-input" %>
            <%= f.label :need_cooler, "Glacière obligatoire", class: "form-check-label text-center"  %>
          </div>
        </div>
        <div class="mt-3 col-12">
          <%= f.input :address, label: "Adresse de la distriution", input_html: { class: "form-control", value: current_user.address }%>
        </div>
        <div class="mt-3 col-6">
          <%= f.input :zipcode, label: "Code postal", input_html: { class: "form-control", value: current_user.zipcode } %>
        </div>
        <div class="mt-3 col-6">
          <%= f.input :city, label: "Ville", input_html: {class: "form-control", value: current_user.city } %>
        </div>
        <div class="mt-3 col-6">
          <%= f.input :date, label: "Date", placeholder: "jj/mm/aaaa", as: :string, required: false, input_html: {class: "datepicker", id:"date"} %>
        </div>
        <div class="mt-3 col-6">
          <%= f.input :hour, label: "Heure", placeholder: "hh:mm", as: :string, required: false, input_html: {class: "timepicker", id:"hour"} %>
        </div>
        <div class="mt-3 col-12">
          <%= f.input :informations, label: "Informations complémentaires", class: "form-control" %>
        </div>

        <div class="form-actions mt-1 col-6 offset-6">
          <%= f.button :submit, value: "Sauvegarder", class: "btn btn-oval-full-green profile-button" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
