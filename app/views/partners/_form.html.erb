<%= form_tag('/partners',
    :method => "get",
    :id => "geo-search") do |f| %>
  <%= text_field_tag :place, params["search-type"] == "geolocation" ? "Ma position" : params[:place] || current_user.full_address, {:required => 'required', "data-coords" => params[:place]} %>
  <%= hidden_field_tag "search-type", params[:search_type] || "text" %>
  <%= select_tag :radius,
        options_for_select([
          ["2km", "2"],
          ["5km", "5"],
          ["10km", "10"],
          ["20km", "20"],
          ["50km", "50"],
          ["100km", "100"]
        ], params[:radius] || "5"), {prompt: "Rayon", :required => 'required'} %>
  <%= button_tag(type: "button", id: "geoloc") do %>
    <i class="fas fa-map-marker-alt"></i>
  <% end %>
  <%= button_tag(type: "submit", id: "search-submit") do %>
    <i class="fas fa-search"></i>
  <% end %>

<% end %>
