<h1>TEST</h1>

<div class="d-flex">
     <%= render partial: 'form' %>
</div>

<div class="tabs d-flex">
  <div class="tab active" id="shops-list-tab">Liste</div>
  <div class="tab" id="shops-map-tab">Carte</div>
</div>

<div id="shops-list-container" class="tab-container active">
  <% @partners.each do |partner| %>
    <%= link_to partner_path(partner) do %>
      <div class="card-template-shop">
        <div class="card-shop">
          <div class="top">
            <div class="shop-name">
              <%= image_tag "carrefour.png", alt: "Carrefour", width: 30 %>
              <p class="shop-title"><%= partner.name %></p>
            </div>
            <div class="distance">
              <p class="distance-label"><span><i class="fas fa-map-marker-alt"></i></span>Distance</p>
            </div>
          </div>
          <div class="bottom">
            <p class="shop-address"><%= partner.full_address %></p>
            <p class="label-yellow">urgent</p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div id="shops-map-container" class="tab-container">
  <div id="map" class="show"
    style="width: 100%; height: 500px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

