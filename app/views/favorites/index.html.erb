<div class="index">
  <!-- TITLE -->
  <h1 class="inset">Mes magasins favoris</h1>
  <!-- CARDS -->
  <div class="cards">
   
    <!-- CARD FAVORIS -->
  <div class="card-template-favoris">
    <% @favorites.each do |favorite| %>
      <%= link_to partner_path(favorite.partner) do %>
        <div class="card-favoris">
          <div class="top">
            <div class="shop-name">
              <%= image_tag "carrefour.png", alt: "Carrefour", width: 30 %>
              <p class="shop-title"><%= favorite.partner.name %></p>
            </div>
            <div class="distance">
              <p class="distance-label"><span><i class="fas fa-map-marker-alt"></i></span>700 m</p>
            </div>  
          </div>
          <div class="bottom">
            <div class="shop-address">
            <p><%= favorite.partner.address %></p>
            <p><%= favorite.partner.zipcode %> <%= favorite.partner.city %></p>
            </div>
            <%# if favorite.users.include? current_user %>
            <%= link_to favorite_path(favorite), method: :delete, class: "fav" do %>
              <i class="fas fa-heart"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>