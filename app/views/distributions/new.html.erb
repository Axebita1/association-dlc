        <div class="mt-3 col-md-12">
          <label for="exampleFormControlTextarea1" class="labels">2. Description (type de produits)</label>
          <textarea class="form-control" id="description" value="" placeholder=""></textarea>
        </div>
        <div class="mt-3 ml-3">
        	<p>3. Équipements nécessaires</p>
        </div>
        <div class="form-check ml-3 col-md-12">
          <input class="form-check-input" type="checkbox" value="" id="need_bag">
          <label class="form-check-label" for="need_bag">
            Sacs et cabas
          </label>
        </div>
        <div class="form-check ml-3 col-md-12">
          <input class="form-check-input" type="checkbox" value="" id="need_cooler">
          <label class="form-check-label" for="need_cooler">
            Glacière obligatoire
          </label>
        </div>
        <div class=" mt-3 col-md-12">
          <label class="labels">4. Adresse de la distribution</label>
          <input type="text" class="form-control" placeholder="<%= @user.address %>" value="" id="address">
        </div>
        <div class=" mt-3 col-md-6">
          <label class="labels">Code postal</label>
          <input type="text" class="form-control" placeholder="<%= @user.zipcode %>" value="" id="zipcode">
        </div>
        <div class=" mt-3 col-md-6">
          <label class="labels">Ville</label>
          <input type="text" class="form-control" value="<%= @user.city %>" placeholder="" id="city">
        </div>
        <div class=" mt-3 col-md-6">
          <label class="labels">5. Date de la distribution</label>
          <input type="text" class="form-control datepicker" placeholder="" value="" id="date">
        </div>
        <div class=" mt-3 col-md-6">
          <label class="labels">Heure</label>
          <input type="text" class="form-control timepicker" value="" placeholder="" id="hour">
        </div>
        <div class="mt-3 col-md-12">
          <label for="exampleFormControlTextarea1" class="labels">6. Informations complémentaires</label>
          <textarea class="form-control" id="informations" value="" placeholder=""></textarea>
        </div>
        <div class="mt-1 col-md-6">
          <button class="btn btn-oval-full-green profile-button" type="button">Sauvegarder</button>
        </div>
